<root>
    <in>
        position3f
        normal
    </in>
    <out>
        normal
        position3f
    </out>
    <uniform>
        CameraInfo g_camera;
        SceneInfo r_scene_info;
    </uniform>

    <main>
        out_Position=normalize(vec3(r_scene_info.l2w*vec4(Position,1.0)));
        out_Normal=normalize(mat3(r_scene_info.l2w)*Normal);

        gl_Position=r_scene_info.mvp*vec4(Position,1.0);
    </main>
</root>
