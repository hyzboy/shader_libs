<root>
    <in>
        position3f
        normal
    </in>
    <out>
        position3f
        normal
    </out>
    <uniform>
        CameraInfo g_camera;
        SceneInfo r_scene_info;
    </uniform>

    <main>
        out_Position=(r_scene_info.l2w*vec4(Position,1.0)).xyz;
        out_Normal=mat3(r_scene_info.l2w)*Normal;

        gl_Position=g_camera.vp*vec4(out_Position,1.0);
    </main>
</root>
