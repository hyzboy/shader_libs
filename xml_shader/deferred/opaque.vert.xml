<root>
    <in>gb_pntt</in>
    <out>gb_ntt</out>

    <uniform>
        CameraInfo g_camera;
        SceneInfo r_scene_info;
    </uniform>

    <main>
        out_Normal  =g_camera.normal*normalize(Normal);
        out_Tangent =g_camera.normal*normalize(Tangent);
        out_TexCoord=TexCoord;

        gl_Position=r_scene_info.mvp*vec4(Position,1.0);
    </main>
</root>
