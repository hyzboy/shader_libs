<root>
    <in>
        position3f
        normal
    </in>
    <out>FragColor</out>
    <uniform>
        samplerCube EnvCubemap;
        CameraInfo g_camera;
        SceneInfo r_scene_info;
    </uniform>
    <raw>EnvCubemap</raw>
    <main>
        vec3 uvw=GetEnvCubemapCoord(Position-g_camera.pos,normalize(Normal));

        FragColor=texture(EnvCubemap,uvw);
    </main>
</root>
