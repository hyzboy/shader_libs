<root>
    <in>
        position3f
        texcoord2f
    </in>
    <out>texcoord2f</out>

    <uniform>
        WorldMatrix world;
        <global>
            LocalToWorld l2w;
        </global>
    </uniform>

    <main>
        out_TexCoord=TexCoord;
        gl_Position=world.vp*l2w.model*vec4(Position,1.0);
    </main>
</root>
