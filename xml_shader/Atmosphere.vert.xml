<root>
    <in>
        position3f
    </in>

    <out>
        position4f
    </out>

    <uniform>
        WorldMatrix world;
    </uniform>

    <raw>
        PushConstant3D
    </raw>

    <main>
        out_Position=world.mvp*pc.local_to_world*vec4(Position,1.0);
        gl_Position=out_Position;
    </main>
</root>
