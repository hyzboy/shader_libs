<root>
    <in>
        position3f
        color4f
    </in>
    <out>color4f</out>
    <uniform>
        CameraInfo g_camera;
        SceneInfo r_scene_info;
    </uniform>

    <main>
        out_Color=Color;
        gl_Position=g_camera.vp*r_scene_info.l2w*vec4(Position,1.0);
        //gl_Position=r_scene.mvp*vec4(Position,1.0);
    </main>
</root>
