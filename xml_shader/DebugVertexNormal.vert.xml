<root>
    <in>
        position3f
        normal
    </in>
    <out>color4f</out>
    <uniform>WorldMatrix world;</uniform>
    <raw>
        PushConstant3D
        Normal
    </raw>

    <main>
        out_Color=vec4(GetWorldNormal()*0.5+0.5,1.0);
        gl_Position=world.mvp*pc.local_to_world*vec4(Position,1.0);
    </main>
</root>
